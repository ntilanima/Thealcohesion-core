{
  "$schema": "../gen/schemas/desktop-schema.json",

  "productName": "Sovereign Shell",
  "version": "0.1.0",
  "identifier": "com.sovereign.shell",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sovereign Shell",

        "fullscreen": true,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,

        "width": 1280,
        "height": 720
      }
    ],

    "security": {
      "capabilities": ["default"]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
